<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_15sdp</item><!-- text size in menu-->
        <item name="android:paddingTop">@dimen/_2sdp</item><!-- text size in menu-->
        <item name="android:paddingBottom">@dimen/_2sdp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/_30sdp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">@dimen/_30sdp</item><!-- item size in menu-->
    </style>
    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_12sdp</item>

    </style>

</resources>
